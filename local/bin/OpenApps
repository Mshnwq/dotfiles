#!/usr/bin/env bash
#   █████╗ ██████╗ ██████╗ ███████╗    ██╗      █████╗ ██╗   ██╗███╗   ██╗ ██████╗██╗  ██╗███████╗██████╗
#  ██╔══██╗██╔══██╗██╔══██╗██╔════╝    ██║     ██╔══██╗██║   ██║████╗  ██║██╔════╝██║  ██║██╔════╝██╔══██╗
#  ███████║██████╔╝██████╔╝███████╗    ██║     ███████║██║   ██║██╔██╗ ██║██║     ███████║█████╗  ██████╔╝
#  ██╔══██║██╔═══╝ ██╔═══╝ ╚════██║    ██║     ██╔══██║██║   ██║██║╚██╗██║██║     ██╔══██║██╔══╝  ██╔══██╗
#  ██║  ██║██║     ██║     ███████║    ███████╗██║  ██║╚██████╔╝██║ ╚████║╚██████╗██║  ██║███████╗██║  ██║
#  ╚═╝  ╚═╝╚═╝     ╚═╝     ╚══════╝    ╚══════╝╚═╝  ╚═╝ ╚═════╝ ╚═╝  ╚═══╝ ╚═════╝╚═╝  ╚═╝╚══════╝╚═╝  ╚═╝
#	Script to control prefered apps to launch for all themes
#	Author: z0mbi3
#	url:    https://github.com/gh0stzk/dotfiles

export PATH="$HOME/.local/bin/executer:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="/usr/local/bin:$PATH"
export PATH="/usr/bin:$PATH"

case "$1" in
--menu)
  rofi -show drun -theme "$HOME"/.config/rofi/Launcher.rasi
  ;;
--rice)
  RiceSelector
  ;;
--execute)
  Executer
  ;;
--terminal)
  Term --terminal
  ;;
--terminal-init)
  Term --override-term kitty --init
  ;;
--floating)
  Term --override-term alacritty --floating
  ;;
--fetch)
  Term --override-term alacritty --fetch
  ;;
--top)
  Term --override-term alacritty --top
  ;;
--k9s)
  Term --override-term alacritty --k9s
  ;;
--lazydocker)
  Term --override-term alacritty --lazydocker
  ;;
--disk)
  Term --override-term alacritty --disk
  ;;
--netmanager)
  NetManagerDM
  ;;
--bluetooth)
  RofiBluetooth
  ;;
--buku)
  RofiBuku
  ;;
--clipboard)
  cliphist list | rofi -theme "$HOME/.config/rofi/Clipboard.rasi" -dmenu | cliphist decode | wl-copy
  ;;
--screenshot-menu)
  ScreenShoTer
  ;;
--screenshot-now)
  ScreenShoTer --override now
  ;;
--screenshot-sel)
  ScreenShoTer --override sel
  ;;
--powermenu)
  PowerMenu
  ;;
--android)
  AndroidMount
  ;;
--keyboard)
  KeyBoardL
  ;;
--wall)
  WallSelect
  ;;
--nvim)
  Term --nvim
  ;;
--termscp)
  Term --override-term alacritty --termscp
  ;;
--yazi)
  Term --override-term kitty --yazi
  ;;
--yazi-tmux)
  Term --override-term kitty --yazi-tmux
  ;;
--music)
  Term --override-term kitty --music
  ;;
  # Apps
--firefox)
  Firefox -P mshnwq
  ;;
--files)
  dolphin
  ;;
--gpt)
  Firefox -P mshnwq -new-tab https://chatgpt.com/
  ;;
--soundcontrol)
  pavucontrol
  ;;
--soundmixer)
  Term --override-term alacritty --soundmixer
  ;;
*)
  echo "Invalid Option"
  ;;
esac
