#!/usr/bin/env bash

[[ -d /sys/class/bluetooth ]] || {
  echo "No Bluetooth Interface" && exit 1
}

source "${BASH_SOURCE%/*}/.lib.sh" || exit 1

daemon="${0##*/}"
case $1 in
--status) daemon:"${1##--}" "$daemon" ;;
--start | --stop)
  daemon:"${1##--}" "$daemon" &&
    "${BASH_SOURCE%/*}/.waybar_bluetooth.sh" "$1"
  ;;
*) exit 2 ;;
esac
