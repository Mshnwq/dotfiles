#!/usr/bin/env bash
set -euo pipefail

options=(
  "󰍁"
  ""
  "󰗽"
  "󰜉"
  "󰐥"
)

rofi_cmd() {
  rofi -dmenu \
    -no-click-to-exit \
    -p "Goodbye ${USER}" \
    -theme "$HOME/.config/rofi/PowerMenu.rasi" \
    -mesg "Uptime: $(uptime -p | sed -e 's/up //g')"
}

chosen=$(printf "%s\n" "${options[@]}" | rofi_cmd)

case $chosen in
"󰐥")
  systemctl poweroff
  ;;
"󰜉")
  systemctl reboot
  ;;
"󰍁")
  hyprlock
  ;;
"")
  MediaControl --stop
  systemctl suspend
  ;;
"󰗽")
  hyprctl dispatch exit
  ;;
esac
